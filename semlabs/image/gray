from PIL import Image, ImageDraw
image = Image.open('Lenna.png')
draw = ImageDraw.Draw(image)
width = image.size[0]
height = image.size[1]
pix = image.load()

for i in range(width):
    for j in range(height):
        r = pix[i, j][0]
        g = pix[i, j][1]
        b = pix[i, j][2]
        S = (r + g + b) // 3
        draw.point((i, j), (S, S, S))

image.save("Lennagray.png", "PNG")

